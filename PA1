import Foundation


func main(){
    print("Hello")
    print("")
    playerGuessInput()
    
    var avaliableWords = initializeWordArray()
    
    var avaliableLetters = initializeLetterArray()
    
    var visibleLetters = initializeVisibleLetterArray()
    
    let chosenLetter: Character = "x"
    let newArray = removeLetterFromAvaliableLetterArray(avaliableLetters, chosenLetter)
    print(newArray)
}

func playerGuessInput(){
    print("What letter would you like to guess?")
    let optionalLetterInput = readLine()
    if let letterInput = optionalLetterInput{
        let characterInput: Character = letterInput[letterInput.startIndex]
        print(characterInput)
    }
    
        

        
    }


